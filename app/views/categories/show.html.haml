- @pages = Kaminari.paginate_array(Page.all.select{ |p| p.ld_page_in_inverse_set(params[:id], :isa) }).page(params[:page]).per(10)
%h1#top.page-title Pages categorised #{params[:id]}

= paginate @pages

- @pages.each do |p|
  = render :partial => 'pages/page_summary', :locals => {:page => p}

= paginate @pages