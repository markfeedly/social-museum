- @categorised_pages_and_coll_items = Kaminari.paginate_array( (Title.all.select{|t| t.titleable.in_categories_and_children?(params[:id]) ? t.titleable : nil }.collect{|t| t.titleable} )).page(params[:page]).per(10)

%h1#top.page-title Categorised #{params[:id]}

= paginate @categorised_pages_and_coll_items

- @categorised_pages_and_coll_items.each do |pci|

  = render 'collection_items/collection_item_summary', collection_item: pci if pci.respond_to?(:description)
  = render 'pages/page_summary', page: pci if pci.respond_to?(:content)
  %br/

= paginate @categorised_pages_and_coll_items