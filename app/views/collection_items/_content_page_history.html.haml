%div{data: {role: "collection-item-versions"}}
  = paginate collection_item_states, param_name: :page_ci

  - collection_item_states.each_with_index do |state, ind|
    = render 'collection_items/collection_item_summary', state: state, index: ind
    %li.no-bullets{data: {role: "collection-item-version", "history-idx" => ind}}

  = paginate collection_item_states, param_name: :page_ci