.page-summary-width
  %li.no-bullets{data: {role: "collection-item-version", "history-idx" => index}}

    .time-and-user
      = render 'users/user_and_time', user: state.user.name, thing: state

    .history-indent

      .history-title
        = state.title.title

      .history-item-number-and-location
        .parent_div
          .float-left
            = "Collection item #{state.item_number}"
          .float-right
            = "Location: #{state.location}"
      .clear

      = ContentHtmlGenerator.generate_full(state).html_safe

      .history-tags-and-categories
        .tags-and-categories
          = render 'tags/tags', tags: state.tags_as_arr
        .tags-and-categories
          = render 'categories/categories', categories: state.categories_as_arr

.page-summary-width-plus
  %hr