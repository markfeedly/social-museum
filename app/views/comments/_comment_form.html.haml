= simple_form_for(([commentable, Comment.new]), :html => {:data => {:role => 'comments-form'}}) do |f|
 = f.input :commentable_id, as: :hidden, input_html: { value: commentable.id.to_s}, data: {role: 'add-comment-to-id'}
 = f.input :commentable_type, as: :hidden, input_html: { value: commentable.class.to_s}, data: {role: 'add-comment-to-typer'}
 = f.text_area :content
 %br
 = f.submit class: 'btn btn-primary', value: 'Add comment', :data => {:role => 'add-comment'}