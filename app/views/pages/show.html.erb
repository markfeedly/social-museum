<h1><%= @page.title %></h1>

<p>
  <% @page.parsed_content.each do |token| %>
      <% if token[:text] %>
          <%= token[:text] %>
      <% end %>
      <% if token[:link] %>
          <% color_style = {:style => 'color: #FF0000'}  %>
          <% color_style = {:style => 'color: #0000FF'}           if token[:link][:exists] %>
          <% url_ending = "/pages/new?title=#{token[:link][:title].gsub(/ /,'%20')}" %>
          <% url_ending = "/pages/#{token[:link][:slug]}"   if token[:link][:exists] %>
          <%= link_to("#{token[:link][:title]}", url_ending, color_style) %>
      <% end %>
  <% end %>
</p>

<%= link_to "Edit", @edit_url, class: "btn btn-primary" if user_signed_in? %>
