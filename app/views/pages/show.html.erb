<h1><%= @page.title %></h1>

<p>
  <%= @page.slugged_content %>
  <% @page.slugged_content.gsub(/\[([a-zA-Z0-9:_ -]*)\]/) do |t| %>
      <% t = t.chop.reverse.chop.reverse %>
      <%= link_to "#{t}", "/pages/#{t}" %>
  <% end %>
</p>

<%= link_to "Edit", @edit_url, class: "btn btn-large btn-primary" if user_signed_in? %>
