.search-result{data: {'page-slug' => page.slug}}
  .parent-div.page-summary-width
    = link_to page.title, page_path(page), class: 'summary-title'
    .float-right
      - if current_user && current_user.can_delete?(page)
        = link_to fa_icon('trash-o'), page,
                  :data =>  {:confirm => 'Are you sure you want to remove this page? This cannot be undone.',
                             :role    => 'delete-page'},
                  :method => :delete
    %br
      .float-left.width-150px.page-summary-image-indent
        = link_to image_tag(ContentHtmlGenerator.page_image(page) || 'http://localhost/Pictures/no_image.png'), page_url(page)
        %br
      .content-preview
        = ContentHtmlGenerator.generate_part(page).html_safe

    .history-tags-and-categories.page-summary-footer-indent_and_spacing.page-summary-width.clear
      .tags-and-categories
        = render 'tags/tags', tags: page.history.last.tags_as_array
      .tags-and-categories
        = render 'categories/categories', categories: page.history.last.categories_as_array
    .page-summary-width-plus
      %hr