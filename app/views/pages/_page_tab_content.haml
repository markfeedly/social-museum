#content-width

  .content-title
    = page.title
  .content-content
    = page.content_as_html(page)

  .content-footer.parent-div
    .content-t-and-c.float-left
      .bold
        Tags
      .content-tags
        = page.tags_as_html.html_safe
      %br
      .bold
        Categories
      .content-categories
        = page.categories_as_html.html_safe
    .content-edit-button.float-right
      = page.edit_button_as_html(current_user, "/pages/#{params[:id]}/edit")
  .clear

  - if page.has_category? ('UMCS Collection')
    .content-footer.parent-div

      .float-left
        %span.bold
          Item number
        \:
        = page.item_number
      .float-right
        %span.bold
          Location
        \:
        =  page.location
  .clear

#comment-width
  = render partial: 'comments/comments_page_tab'