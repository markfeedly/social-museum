.std-width
  - if page.item_number
    .content-item-header.parent-div
      .float-left.bold= "Collection item #{page.item_number}"
      .float-right= "Location: #{page.location}"

  .content-content
    = ContentHtmlGenerator.generate_full(page).html_safe

  .content-footer.parent-div
    .content-t-and-c.float-left
      = render  'tags/tags', tags: page.tags_as_arr
      = render 'categories/categories', categories: page.categories_as_arr
    .content-edit-button.float-right.button-width
      - if current_user.can_update?(page)
        .float-right
          = link_to("Edit page", edit_page_path(page), class: 'btn btn-primary button-width button-spacing')
          %clear
        -# TODO Phrase button more appropriately, or create a means to select existing resource.
        .float-right
          = link_to("Add new resource", new_resource_path+"?for_page=#{page.id}", class: 'btn btn-primary button-width button-spacing')
        - if current_user.can_unsubscribe?(page)

          .float-right
            = link_to( 'Unsubscribe', unsubscribe_page_path(page), class: 'btn btn-primary button-width')
        - if current_user.can_subscribe?(page)

          .float-right
            = link_to( 'Subscribe', subscribe_page_path(page), class: 'btn btn-primary button-width')
  .clear

.std-width
  #comments.comments-spacer
    = render partial: 'comments/comments_page_tab'