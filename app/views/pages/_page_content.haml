.std-width

  .content-content
    = ContentHtmlGenerator.generate_full(page).html_safe

  .content-footer.parent-div
    .content-t-and-c.float-left
      = render  'tags/tags', tags: page.tags_as_arr
      = render 'categories/categories', categories: page.categories_as_arr
    .content-edit-button.float-right.button-width
      - if current_user.can_update?(page)
        .float-right
          = link_to("Edit", edit_page_path(page), class: 'btn btn-primary button-width button-spacing')
          %clear
        -# TODO Phrase button more appropriately, or create a means to select existing resource.
        .float-right
          = link_to("Add new resource", new_resource_path+"?for_page=#{page.id}", class: 'btn btn-primary button-width button-spacing')
        .float-right
          = render 'shared/subscriptions', subscribable: page
  .clear

.std-width
  #comments.comments-spacer
    = render 'comments/comments_page_tab', commentable: page