.std-width

  .page-title-after-type
    = page.title
  %br/

  .content-content
    = page.content_as_html(page)

  .content-footer.parent-div
    .content-t-and-c.float-left
      .bold
        Tags
      = page.tags_as_html.html_safe
      %br
      .bold
        Categories
      = page.categories_as_html.html_safe
    .content-edit-button.float-right
      - if current_user
        .float-right
          = link_to("Edit page", edit_page_path(page), class: "btn btn-primary")
        %br
        %br
        / TODO Phrase button more appropriately, or create a means to select existing resource.
        = link_to("Add resource", new_resource_path, class: "btn btn-primary")
        - if current_user
          - if page.subscribed?(current_user)
            = link_to( 'Unsubscribe', unsubscribe_page_path(page), class: 'btn btn-primary')
          - else
            = link_to( 'Subscribe', subscribe_page_path(page), class: 'btn btn-primary')
  .clear

  / TODO Could be important when 'categories' changes
  - if page.has_category?('UMCS Collection')
    .content-footer.parent-div

      .float-left
        %span.bold
          Item number
        \:
        = page.item_number
      .float-right
        %span.bold
          Location
        \:
        =  page.location
  .clear

.std-width
  #comments
    = render partial: 'comments/comments_page_tab'