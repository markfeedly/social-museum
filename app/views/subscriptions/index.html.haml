%h1 Subscriptions

- cl = 'btn btn-disabled button-spacing'
- cl = 'btn btn-primary button-spacing' if collection_item_subscriptions.any? || page_subscriptions.any?

= link_to('Delete all subscriptions', delete_all_page_subscriptions_subscriptions_path, class: cl)

%hr

.recent-page-font

  = render 'subscriptions/index/column', title: 'Subscribed collection items', subscriptions: collection_item_subscriptions, descr: 'collection item'

  = render 'subscriptions/index/column', title: 'Subscribed pages', subscriptions: page_subscriptions, descr: 'page'

  = render 'subscriptions/index/column', title: 'Subscribed resources', subscriptions: resource_subscriptions, descr: 'resource'

