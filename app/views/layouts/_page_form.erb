<%= form_tag(form_submit_url, method: form_submit_method) do %>
    <%= label_tag(:title) %>
    <%= text_field_tag(:title, page_title, class: "span7") %>
    <%= label_tag(:content) %>
    <%= text_area_tag(:content, page_content, class: "span7", rows: "20") %>
    <br/>
    <%= submit_tag("Save" , class: "btn btn-primary") %>
<% end %>