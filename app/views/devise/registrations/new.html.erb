<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical', :data => {:role => 'new-user'}}) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors resource %>
    <%= f.input :name, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :required => true, :wrapper_html => {:data => {:role => 'password'}} %>
    <%= f.input :password_confirmation, :required => true %>
    <%= f.button :submit, 'Sign up', :class => 'btn-primary', :id => 'sign_up_button' %>
<% end %>
<%= render "devise/shared/links" %>
