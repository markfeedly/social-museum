<h1>Users</h1>

<%= "You are logged in as #{link_to current_user.name, current_user} (#{current_user.email})".html_safe %>

<div class="span8">
  <br/>
  <br/>
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.name, user %>
          </td>
          <td><%= user.email %></td>
          <td><%= user.created_at.to_date %></td>
          <td><%= user.admin? ? 'administrator' : 'user' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
